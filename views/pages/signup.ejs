<!doctype html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
    <link href="../css/registeration.css" rel="stylesheet" type="text/css">
    <title>Document</title>
</head>
<body>

<header>
    <div class="signup">

        <div class="page-linker">
            <div>
                <h1>Welcome Back !</h1>
                <p>Please login to access your user dashboard</p>
                <a href="http://localhost:8000/login" class="linker">Sign In</a>
            </div>
        </div>

        <div class="form-container">
            <form action="/signup" method="post" id="signUp">
                <h1>Create a new account<span>.</span></h1>
                <div class="form-data-container">
                    <label for="name"></label><input class="form-input" name="name" id="name" type="text" placeholder="Name" required>
                </div>
                <div class="form-data-container">
                    <label for="email"></label><input class="form-input" name="email" id="name" type="email" placeholder="Email" required>
                </div>
                <div class="form-data-container">
                    <label for="phone"></label><input class="form-input" minlength="10" maxlength="10" name="phone" id="phone" type="text" placeholder="Phone Number" required>
                </div>
                <div class="form-data-container">
                    <label for="password"></label><input class="form-input" name="password" id="password" type="password" placeholder="Password" required>
                </div>
                <input type="submit" form="signUp" value="Create Account" class="submit-btn">
            </form>
        </div>

    </div>
</header>

</body>
</html>